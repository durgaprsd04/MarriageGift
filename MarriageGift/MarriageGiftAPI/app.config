<?xml version="1.0" encoding="utf-8" ?>
<configuration>
<configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler,Log4net"/>
  </configSections>
    <connectionStrings>
        <add name="MarriageGiftDB" connectionString="Server=localhost,1433;Database=MarriageGift;User=sa;Password=Linuxmint19*" providerName="System.Data.SqlClient" />
        <add name="MarriageGiftDBWin" connectionString="Server=(localdb)\MSSQLLocalDB;Database=MarriageGift;Integrated Security=true" providerName="System.Data.SqlClient" />
    </connectionStrings>
     <log4net>
    <root>
      <level value="DEBUG"/>
      <appender-ref ref="LogFileAppender" />
    </root>
    <appender name="LogFileAppender" type="log4net.Appender.RollingFileAppender" >
      <file value=" log.txt"/>
      <appendToFile value="true" />
      <rollingStyle value="Size" />
      <maxSizeRollBackups value="5" />
      <maximumFileSize value="10MB" />
      <staticLogFileName value="true" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%d [%t] %-5p %c %m%n" />
      </layout>
    </appender>
  </log4net>
</configuration>
